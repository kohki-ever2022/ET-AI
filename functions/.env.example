# Firebase Functions Environment Variables
# Copy this file to .env and fill in your actual values

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Voyage AI Configuration
VOYAGE_API_KEY=your_voyage_api_key_here
VOYAGE_MODEL=voyage-3

# Firebase Configuration (for local development)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# Error Handling Configuration
ERROR_RATE_THRESHOLD_DEGRADED=0.10
ERROR_RATE_THRESHOLD_DOWN=0.50
RESPONSE_TIME_THRESHOLD_DEGRADED=5000
RESPONSE_TIME_THRESHOLD_DOWN=10000

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MINUTES=5
HEALTH_CHECK_RETENTION_HOURS=168

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=60000

# Rate Limit Configuration (Claude API Tier 2)
CLAUDE_RATE_LIMIT_RPM=50
CLAUDE_RATE_LIMIT_TPM=40000
CLAUDE_RATE_LIMIT_RPD=50000

# Alert Configuration
ALERT_EMAIL=admin@example.com
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=90
